<%- contentFor('title') %>ログイン

<%- contentFor('body') %>
<h1 class="mt-3 text-center">Todo-App</h1>
<form id="login-form" action="/auth/login" method="post" class="mt-5 mx-auto d-flex flex-column  align-items-center gap-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="w-50">
        <label for="id" class="form-label">ID</label>
        <input value="testUser" type="text" name="id" id="id" autocomplete="username" class="form-control" placeholder="IDを入力してください" required>
    </div>
    <div class="w-50">
        <label for="password" class="form-label">パスワード</label>
        <input value="testPassword" type="password" name="password" id="password" autocomplete="current-password" class="form-control" placeholder="パスワードを入力してください" required>
    </div>
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="error mt-1">
        <p><%= error %></p>  
    </div>
    <% } %>
    <button type="submit" class="mt-1 d-block w-25 btn btn-dark user-button">ログイン</button>
    <a class="interactive" href="/auth/github">
        <img src="/img/github.svg" alt="gitHub-icon" class="git-hub-icon"> 
    </a>
    <a href="/auth/signup" class="d-block link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">サインアップ</a>


</form>
