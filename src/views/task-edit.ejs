<%- contentFor('title') %>タスク更新

<%- contentFor('body') %>
<h1>タスク更新</h1>
<form action="/task/edit/<%= customItem.task.id %>" method="post">
    <label for="title">タイトル</label>
     <% if (errors.title) { %>
        <% errors.title.forEach(function(msg) { %>
            <p class="error"><%= msg %></p>
        <% }); %>
    <% } %>
    <input type="text" name="title" id="title" value="<%= typeof oldInput.title !== 'undefined' ? oldInput.title : customItem.task.title %>">
    <br/>

    <label for="detail">詳細</label>
     <% if (errors.detail) { %>
        <% errors.detail.forEach(function(msg) { %>
            <p class="error"><%= msg %></p>
        <% }); %>
    <% } %>
    <textarea name="detail" id="detail"><%= typeof oldInput.detail !== 'undefined' ? oldInput.detail : customItem.task.detail %></textarea>
    <br/>

    <label for="deadline">期限</label>
     <% if (errors.deadline) { %>
        <% errors.deadline.forEach(function(msg) { %>
            <p class="error"><%= msg %></p>
        <% }); %>
    <% } %>
    <input type="date" name="deadline" id="deadline" value="<%= typeof oldInput.deadline !== 'undefined' ? oldInput.deadline : customItem.task.deadline %>">
    <br/>
    <button type="submit">登録</button>
</form>