<%- contentFor('title') %>タスク追加

<%- contentFor('body') %>
<h1>タスク追加</h1>
<form action="/task/new" method="post" id="form">
    <label for="title">タイトル</label>
    <% if (errors.title) { %>
        <div class="error"><%= errors.title %></div>
    <% } %>
    <input type="text" name="title" id="title" value="<%= oldInput.title || '' %>">
    <br/>
    <label for="detail">詳細</label>
     <% if (errors.detail) { %>
        <div class="error"><%= errors.detail %></div>
    <% } %>
    <textarea name="detail" id="detail"><%= oldInput.detail || '' %></textarea>
    <br/>
    <label for="deadline">期限</label>
     <% if (errors.deadline) { %>
        <div class="error"><%= errors.deadline %></div>
    <% } %>
    <input type="date" name="deadline" id="deadline" value="<%= oldInput.deadline || '' %>">
    <br/>
    <button type="submit">登録</button>
</form>
 <% if (errors && errors.length > 0) { %>
    <%=errors[0]%>
<% } %>
